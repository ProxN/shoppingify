{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "noEmit": true,
    "checkJs": false,
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2017",
      "esnext"
    ],
    "baseUrl": "./src",
    "paths": {
      "@components/*":["components/*"],
      "@assets/*":["assets/*"],
      "@hooks/*":["hooks/*"]
    }
  },
  "include": ["./src/assets/*","next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "next.config.js"
  ]
}
